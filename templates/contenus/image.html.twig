{% extends 'base.html.twig' %}

{% block title %}Funbox | Images{% endblock %}

    {% block images %}
        <h1 id="images">Images</h1>
        {% for contenus in contenusAll %}
                <div class="colcontent">
                    <h2><strong>{{ contenus.titre }}</strong></h2>
                    <span>{{ contenus.auteur }} </span>
                    <p id="date">&nbsp;. {{ contenus.date|date('d-m-Y') }} . {{ contenus.date|date('H:i') }}</p>
                </div>
                <div>
                    <img src="{{ asset('ImgUpload/') ~contenus.file }}" class="img-fluid" alt="content">
                </div>
                <div class="footcontent">
                    <p id="post-meta">852</p>
                    <div class="footinterior">
                        <ul class="btn-vote">
                            <li><a href="#" class="upvote"><i class="fas fa-caret-square-up"></i></a></li>
                            <li><a href="#" class="downvote"><i class="fas fa-caret-square-down"></i></a></li>
                            <li><a href="#" class="comment"><i class="far fa-comment-alt"></i></a></li>
                        </ul>
                    </div>
                    <p id="post-meta">152</p>
                </div>
                <hr/>
        {% endfor %}
        <div class="navigation">
            {{ knp_pagination_render(contenusAll) }}
        </div>
    {% endblock %}

