{% extends 'base.html.twig' %}

{% block login %}
    <div class="container register-form">
        <div class="form">
            <div class="note">
                <h2>Connexion</h2>
            </div>
            {{ form_start(loginForm) }}
            <div class="form-content">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_row(loginForm._username) }}
                        </div>
                        <div class="form-group">
                            {{ form_row(loginForm._password) }}
                        </div>
                    </div>
                </div>
                {{ form_row(loginForm.ok) }}
                {% if error %}
                    <div style="color: red">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            </div>
            {{ form_end(loginForm) }}
        </div>
    </div>
{% endblock %}
